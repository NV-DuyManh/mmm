<Page x:Class="Cinema.QLSuatChieu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cinema"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Quản lý suất chiếu">

    <Grid Background="#F4F7F6">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" BorderThickness="0,0,0,1" BorderBrush="#E0E5E5">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.05" Direction="270"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="30,0">
                <TextBlock Text="🎬" FontSize="26" Margin="0,0,15,0"/>
                <TextBlock Text="QUẢN LÝ SUẤT CHIẾU" FontWeight="ExtraBlack" FontSize="20" Foreground="#2C3E50"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" BorderThickness="0,0,1,0" BorderBrush="#E0E5E5" Margin="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="DANH SÁCH RẠP" Margin="25,25,0,15" Foreground="#95A5A6" FontSize="13" FontWeight="Bold"/>

                    <ListBox Grid.Row="1" x:Name="lst_LocPhong" BorderThickness="0" Background="Transparent" 
                             ScrollViewer.VerticalScrollBarVisibility="Auto" 
                             SelectionChanged="lst_LocPhong_SelectionChanged">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="25,16"/>
                                <Setter Property="FontSize" Value="15"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#34495E"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E8F8F5"/>
                                        <Setter Property="Foreground" Value="#1ABC9C"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F8F9FA"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Border>

            <Grid Grid.Column="1" Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,25">
                    <Border BorderBrush="#D1D8D8" BorderThickness="1" CornerRadius="8" Background="White" Width="400">
                        <TextBox x:Name="txt_tim_kiem" Padding="15,12" BorderThickness="0" Background="Transparent"
                                 Text="🔍 Tìm kiếm tên phim..." Foreground="#95A5A6"
                                 GotFocus="txt_tim_kiem_GotFocus" LostFocus="txt_tim_kiem_LostFocus"
                                 TextChanged="txt_tim_kiem_TextChanged"
                                 VerticalAlignment="Center" FontSize="15"/>
                    </Border>

                    <Button x:Name="btn_hien_form_them" Content="+ TẠO SUẤT MỚI" 
                            Background="#1ABC9C" Foreground="White" FontWeight="Bold" FontSize="14"
                            Padding="25,12" Margin="20,0,0,0" BorderThickness="0"
                            Click="btn_hien_form_them_Click" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="3" Opacity="0.3" Color="#1ABC9C"/>
                        </Button.Effect>
                    </Button>
                </StackPanel>

                <Border x:Name="pnl_NhapLieu" Grid.Row="1" Visibility="Collapsed" Background="White" 
                        BorderBrush="#1ABC9C" BorderThickness="2" CornerRadius="10" Margin="0,0,0,25" Padding="25">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.08"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="KHU VỰC TẠO SUẤT CHIẾU MỚI" Foreground="#1ABC9C" FontWeight="Bold" FontSize="13" Margin="0,0,0,20"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox x:Name="cmb_Phim" Grid.Column="0" Padding="12" Margin="0,0,15,0" ToolTip="Chọn Phim" FontSize="14"/>
                            <ComboBox x:Name="cmb_Phong" Grid.Column="1" Padding="12" Margin="0,0,15,0" ToolTip="Chọn Phòng" FontSize="14"/>
                            <DatePicker x:Name="dp_NgayChieu" Grid.Column="2" Padding="8" Margin="0,0,15,0" FontSize="14"/>
                            <TextBox x:Name="txt_GioChieu" Grid.Column="3" Padding="12" Margin="0,0,15,0" ToolTip="Giờ (VD: 19:30)" Text="19:00" FontSize="14"/>
                            <TextBox x:Name="txt_GiaVe" Grid.Column="4" Padding="12" Margin="0,0,15,0" ToolTip="Giá vé" Text="100000" KeyDown="FastEntry_KeyDown" FontSize="14"/>

                            <Button x:Name="btn_LuuNhanh" Grid.Column="5" Content="✔ LƯU" Background="#2C3E50" Foreground="White" FontWeight="Bold" 
                                    BorderThickness="0" Padding="25,12" Margin="0,0,15,0" Click="btn_LuuNhanh_Click" Cursor="Hand" FontSize="14">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="6"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <Button Grid.Column="6" Content="✖ ĐÓNG" Background="#E74C3C" Foreground="White" FontWeight="Bold"
                                    BorderThickness="0" Padding="20,12" Click="btn_HuyNhap_Click" Cursor="Hand" FontSize="14">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="6"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>

                <DataGrid Grid.Row="2" x:Name="dtg_suat_chieu" 
                          AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" 
                          Background="White" BorderBrush="#E0E5E5" BorderThickness="1" RowHeight="55"
                          GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#F4F7F6"
                          SelectionMode="Single" RowBackground="White" AlternatingRowBackground="#FAFCFC">
                    <DataGrid.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.05"/>
                    </DataGrid.Effect>
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F8F9FA"/>
                            <Setter Property="Height" Value="50"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="#7F8C8D"/>
                            <Setter Property="Padding" Value="20,0"/>
                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            <Setter Property="BorderBrush" Value="#E0E5E5"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="TÊN PHIM" Binding="{Binding phim.ten_phim}" Width="2.5*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="20,0,0,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="PHÒNG CHIẾU" Binding="{Binding phongchieu.ten_phong}" Width="1.2*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="20,0,0,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="NGÀY CHIẾU" Binding="{Binding ngay_chieu, StringFormat=\{0:dd/MM/yyyy\}}" Width="1.2*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="20,0,0,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="GIỜ CHIẾU" Binding="{Binding gio_bat_dau}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="20,0,0,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="GIÁ VÉ" Binding="{Binding gia_ve_co_ban, StringFormat={}{0:N0} đ}" Width="1.2*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#E67E22"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="20,0,0,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTemplateColumn Header="THAO TÁC" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="🗑 Xóa" Foreground="#E74C3C" Background="#FDEDEC" FontWeight="Bold" BorderThickness="0" 
                                            Padding="10,6" Click="btn_xoa_Click" Cursor="Hand" Margin="10,0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <StatusBar Grid.Row="3" Background="Transparent" Margin="0,20,0,0">
                    <TextBlock x:Name="txt_ket_qua" Text="Sẵn sàng quản lý lịch chiếu." Foreground="#95A5A6" FontWeight="SemiBold" FontSize="13"/>
                </StatusBar>
            </Grid>
        </Grid>
    </Grid>
</Page>