<Window x:Class="Cinema.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cinema"
        mc:Ignorable="d"
        Title="Group6 Cinema" 
        Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F4F6F9">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#DCDDE1"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#DCDDE1"/>
        </Style>

        <Style TargetType="Button" x:Key="BtnNav">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#2F3640"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#3498DB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="BtnPrimary">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Background="White">
            <Border BorderBrush="#F1F2F6" BorderThickness="0,0,0,1">
                <TextBlock Text="🎬 NHOM6 CINEMA" 
                           FontSize="32" 
                           FontWeight="ExtraBold" 
                           Foreground="#2C3E50" 
                           HorizontalAlignment="Center" 
                           Margin="0,25"/>
            </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                <Button Content="SHOP QUÀ TẶNG" Style="{StaticResource BtnNav}"/>
                <TextBlock Text="|" VerticalAlignment="Center" Foreground="#DCDDE1"/>
                <Button Content="MUA VÉ" Style="{StaticResource BtnNav}"/>
                <TextBlock Text="|" VerticalAlignment="Center" Foreground="#DCDDE1"/>
                <Button Content="PHIM" Style="{StaticResource BtnNav}"/>
                <TextBlock Text="|" VerticalAlignment="Center" Foreground="#DCDDE1"/>
                <Button Content="KHUYẾN MÃI" Style="{StaticResource BtnNav}"/>
            </StackPanel>
            <Separator Background="#F1F2F6"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Border Width="420" 
                    Height="Auto" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Background="White" 
                    CornerRadius="12" 
                    Padding="40,50">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="4" Color="#000000" Opacity="0.1"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="ĐĂNG NHẬP HỆ THỐNG" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,35"/>

                    <TextBlock Text="Tài khoản" FontWeight="SemiBold" Foreground="#7F8C8D" Margin="0,0,0,8"/>
                    <TextBox x:Name="txtTaiKhoan" Margin="0,0,0,20"/>

                    <TextBlock Text="Mật khẩu" FontWeight="SemiBold" Foreground="#7F8C8D" Margin="0,0,0,8"/>
                    <PasswordBox x:Name="txtMatKhau" Margin="0,0,0,10"/>

                    <TextBlock Text="Quên mật khẩu?" 
                               HorizontalAlignment="Right" 
                               TextDecorations="Underline" 
                               Foreground="#3498DB" 
                               Cursor="Hand"
                               FontSize="13"
                               Margin="0,0,0,30"
                               MouseLeftButtonDown="txtQuenMatKhau_MouseDown"/>

                    <Button Content="ĐĂNG NHẬP" 
                            Click="BtnDangNhap_Click" 
                            Style="{StaticResource BtnPrimary}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>