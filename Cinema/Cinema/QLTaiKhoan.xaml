<Page x:Class="Cinema.QLTaiKhoan"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cinema"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Quản Lý Tài Khoản" Background="#F4F7F9">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="QUẢN LÝ TÀI KHOẢN NGƯỜI DÙNG" FontSize="24" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20"/>
        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Direction="270" Opacity="0.1" ShadowDepth="2"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel Margin="10,5">
                    <TextBlock Text="Tài khoản" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtTaiKhoan" Height="35" VerticalContentAlignment="Center" Padding="5"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="10,5">
                    <TextBlock Text="Mật khẩu" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtMatKhau" Height="35" VerticalContentAlignment="Center" Padding="5"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Margin="10,5">
                    <TextBlock Text="Họ tên" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtHoTen" Height="35" VerticalContentAlignment="Center" Padding="5"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Margin="10,5">
                    <TextBlock Text="Chức vụ" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cbChucVu" Height="35" VerticalContentAlignment="Center">
                        <ComboBoxItem Content="Admin"/>
                        <ComboBoxItem Content="Staff"/>
                    </ComboBox>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,5">
                    <TextBlock Text="Tìm kiếm" Foreground="#7F8C8D" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtSearch" Height="35" VerticalContentAlignment="Center" Padding="5" Tag="Nhập tên để tìm..."/>
                </StackPanel>
                <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,10,0">
                    <Button x:Name="btnThem" Click="btnThem_Click" Content="Thêm mới" Width="100" Height="35" Margin="5" Background="#27AE60" Foreground="White" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="btnSua" Click="btnSua_Click" Content="Cập nhật" Width="100" Height="35" Margin="5" Background="#2980B9" Foreground="White" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="btnXoa" Click="btnXoa_Click" Content="Xóa" Width="100" Height="35" Margin="5" Background="#E74C3C" Foreground="White" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="btnLamMoi" Click="btnLamMoi_Click" Content="Làm mới" Width="100" Height="35" Margin="5" Background="#95A5A6" Foreground="White" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="10">
            <DataGrid x:Name="dgNguoiDung" SelectionChanged="dgNguoiDung_SelectionChanged" AutoGenerateColumns="False" CanUserAddRows="False" Background="White" BorderThickness="0" GridLinesVisibility="None" RowHeight="40" SelectionUnit="FullRow" IsReadOnly="True">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#2C3E50"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Height" Value="40"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã NV" Binding="{Binding ma_nguoi_dung}" Width="Auto"/>
                    <DataGridTextColumn Header="Tài khoản" Binding="{Binding tai_khoan}" Width="*"/>
                    <DataGridTextColumn Header="Mật khẩu" Binding="{Binding mat_khau}" Width="*"/>
                    <DataGridTextColumn Header="Họ tên" Binding="{Binding ho_ten}" Width="2*"/>
                    <DataGridTextColumn Header="Chức vụ" Binding="{Binding chuc_vu}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>