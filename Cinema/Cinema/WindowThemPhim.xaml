<Window x:Class="Cinema.WindowThemPhim"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm phim"
        Height="750"
        Width="550"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F9">

    <Border Background="White"
            Padding="25"
            Margin="20"
            CornerRadius="12">

        <ScrollViewer VerticalScrollBarVisibility="Auto">

            <StackPanel>

                <TextBlock Text="Tên phim"/>
                <TextBox x:Name="txtTenPhim" Margin="0,5,0,15"/>

                <TextBlock Text="Mã thể loại"/>
                <TextBox x:Name="txtMaTheLoai" Margin="0,5,0,15"/>

                <TextBlock Text="Thời lượng (phút)"/>
                <TextBox x:Name="txtThoiLuong" Margin="0,5,0,15"/>

                <TextBlock Text="Ngày khởi chiếu"/>
                <DatePicker x:Name="dpNgayKhoiChieu" Margin="0,5,0,15"/>

                <TextBlock Text="Ngày kết thúc"/>
                <DatePicker x:Name="dpNgayKetThuc" Margin="0,5,0,15"/>

                <TextBlock Text="Mô tả"/>
                <TextBox x:Name="txtMoTa"
                         Height="60"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Margin="0,5,0,15"/>

                <TextBlock Text="Trạng thái"/>
                <ComboBox x:Name="cbTrangThai" Margin="0,5,0,15">
                    <ComboBoxItem Content="DangChieu"/>
                    <ComboBoxItem Content="SapChieu"/>
                    <ComboBoxItem Content="NgungChieu"/>
                </ComboBox>

                <TextBlock Text="Người nhập"/>
                <TextBox x:Name="txtNguoiNhap" Margin="0,5,0,20"/>

                <Button Content="Lưu"
                        Height="40"
                        Background="#27AE60"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BtnLuu_Click"/>

            </StackPanel>

        </ScrollViewer>
    </Border>
</Window>
