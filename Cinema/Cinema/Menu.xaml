<Window x:Class="Cinema.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="Quản lý rạp phim"
        Height="500"
        Width="900"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F4F6F9">

    <Grid>
        <Grid.Resources>
            <Style x:Key="SideMenuCard" TargetType="Button">
                <Setter Property="Height" Value="50"/>
                <Setter Property="Margin" Value="12,8"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="Foreground" Value="#2C3E50"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="Padding" Value="15,0"/>
                <Setter Property="Cursor" Value="Hand"/>

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bd"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="8">
                                <ContentPresenter
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Margin="5,0"/>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd"
                                            Property="Background"
                                            Value="#ECF0F1"/>
                                </Trigger>

                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="bd"
                                            Property="Background"
                                            Value="#D6DBDF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="#2C3E50" Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Text="🎬 QUẢN LÝ RẠP PHIM"
                               Foreground="White"
                               FontSize="17"
                               FontWeight="Bold"
                               Margin="15"
                               TextWrapping="Wrap"/>

                    <Button Style="{StaticResource SideMenuCard}"
                            Content="🎬  Quản lý phim"
                            Click="BtnPhim_Click"/>

                    <Button Style="{StaticResource SideMenuCard}"
                            Content="🍿  Quản lý sản phẩm"
                            Click="BtnSanPham_Click"/>

                    <Button Style="{StaticResource SideMenuCard}"
                            Content="🕒  Quản lý suất chiếu"
                            Click="BtnSuatChieu_Click"/>

                    <Button Style="{StaticResource SideMenuCard}"
                            Content="👤  Quản lý tài khoản"
                            Click="BtnTaiKhoan_Click"/>
                </StackPanel>

                <Button Grid.Row="1"
                        Style="{StaticResource SideMenuCard}"
                        Content="🚪  Đăng xuất"
                        Margin="12,8,12,20"
                        Foreground="#E74C3C"
                        Click="BtnDangXuat_Click"/>
            </Grid>
        </Border>

        <Border Grid.Column="1"
                Background="White"
                Margin="10"
                CornerRadius="8"
                BorderBrush="#DDDDDD"
                BorderThickness="1">
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Border>
    </Grid>
</Window>